<h2>Create a New Movie</h2>
<form action="/movies/create" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" required>
    
    <label for="genre">Genre:</label>
    <input type="text" name="genre" id="genre" required>
    
    <label for="plot">Plot:</label>
    <textarea name="plot" id="plot" required></textarea>
    
    <label for="cast">Cast:</label>
    <select name="cast" id="cast" multiple>
        {{#each celebrities}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
    
    <button type="submit">Create Movie</button>
</form>


<h2>Edit Movie</h2>
<form action="/movies/{{movie._id}}" method="post">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="{{movie.title}}" required>

    <label for="genre">Genre:</label>
    <input type="text" name="genre" id="genre" value="{{movie.genre}}" required>

    <label for="plot">Plot:</label>
    <textarea name="plot" id="plot" rows="4" required>{{movie.plot}}</textarea>

    <label for="cast">Cast:</label>
    <select name="cast" id="cast" multiple>
        {{#each celebrities}}
            <option value="{{this._id}}" {{#if (contains movie.cast this._id)}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
    </select>

    <button type="submit">Save Changes</button>
</form>