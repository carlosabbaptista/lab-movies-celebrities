<h2>Movie List</h2>

<a href="/movies/create">Create a New Movie</a>


<h2>All Movies</h2>
<ul>
    {{#each movies}}
        <li>
            <h3>{{title}}</h3>
            <p>Genre: {{genre}}</p>
            <p>Plot: {{plot}}</p>
            <p>Cast:
                {{#each cast}}
                {{name}}{{@last '' ', '}}
                {{/each}}
            </p>
        </li>
    {{/each}}
</ul>


<ul>
    {{#each movies}}
        <li>
            <h3><a href="/movies/{{_id}}">{{title}}</a></h3>
        </li>
    {{/each}}
</ul>
